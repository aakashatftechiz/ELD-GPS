<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity"
    android:gravity="center"
    android:padding="30dp">

    <TextView
        android:id="@+id/device_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fcmTokenView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text=""/>

    <TextView
        android:id="@+id/fcmTokenView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enter_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/device_id_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Your appplication ID" />

        <ImageView
            android:id="@+id/device_id_view_hint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/question_solid"
            android:background="@drawable/border_bg"
            android:contentDescription="Question Mark" />
    </LinearLayout>

    <Button
        android:id="@+id/enter_button"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:text="@string/welcome" />

</LinearLayout>